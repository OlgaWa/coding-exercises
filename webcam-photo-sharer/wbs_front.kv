<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Camera:
            id: camera
            opacity: 0
            size_hint_y: 0.8
            play: False
        Button:
            size_hint_y: 0.1
            background_normal: "images/normal.png"
            background_down: "images/down.png"
            text: "Start camera" if root.ids.camera.play == False else "Stop camera"
            on_press: root.start() if root.ids.camera.play == False else root.stop()
        Button:
            background_normal: "images/normal.png"
            background_down: "images/down.png"
            size_hint_y: 0.1
            text: "Capture"
            on_press: root.capture()


<PhotoScreen>:
    GridLayout:
        padding: 10
        spacing: 10
        cols: 1
        Image:
            id: screen
            size_hint_y: 0.7
        Button:
            size_hint_y: 0.1
            text: "Create shareable link"
            background_normal: "images/normal.png"
            background_down: "images/down.png"
            on_press: root.create_link()
        Label:
            id: link
            size_hint_y: 0.1
            text: ""
        GridLayout:
            size_hint_y: 0.1
            spacing: 10
            cols: 2
            Button:
                text: "Copy link"
                background_normal: "images/normal.png"
                background_down: "images/down.png"
                on_press: root.copy_link()
            Button:
                text: "Open link"
                background_normal: "images/normal.png"
                background_down: "images/down.png"
                on_press: root.open_link()


<RootWidget>:
    canvas.before:
        Color:
            rgba: (0.1, 0.1, 0.2, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    CameraScreen:
        id: camera_screen
        name: "camera_screen"
    PhotoScreen:
        id: photo_screen
        name: "photo_screen"
